<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#000"
    tools:context="com.portfolio.vidisha.Graduation.Graduation">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounder_corner"
                android:padding="16dp"
                android:text="Hey, I am Vidisha Bardia. Welcome to my Portfolio App"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:src="@drawable/mee" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:src="@drawable/mee" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="-15dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg2" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:background="@drawable/rounded_corner_1"
                android:padding="16dp"
                android:text="I am a Post-Grad Student at The Maharaja Sayajirao University of Baroda, Vadodara, Gujarat.I specialize in Food Science and Nutrition. "
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVieww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="6"
                android:textColor="#000"

                android:background="@drawable/rounder_corner"
                android:padding="16dp"
                android:text="I am articulate and love what I do. I love socializing and can communicate well with people. I am a perfectionist and attentive towards details. I love working for the poor and underprivileged and am enthusiastic about life. I am assertive and eclectic in dealing with problems. I am outgoing and love to challenge myself in different situations. I am tenacious and focused towards my work. My open- mindedness towards things in life brings out the optimist in me. "
/>
            <ImageView
                android:id="@+id/imageVieww"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="1"
                android:src="@drawable/arrow_bg1" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:src="@drawable/mee" />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:onClick="onHome"
            android:layout_weight="0.2"
            android:src="@drawable/home"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/school"
            android:onClick="onSchool"
            android:layout_height="30dp"
            android:src="@drawable/school"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:layout_height="30dp"
            android:onClick="onHobby"
            android:id="@+id/hobby"
            android:src="@drawable/xbox"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/contact"
            android:onClick="onContact"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            />


    </LinearLayout>
    </LinearLayout>