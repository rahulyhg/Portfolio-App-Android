<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="com.portfolio.vidisha.Graduation.Graduation">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:paddingTop="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/grad"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"

           >
           <com.alorma.timeline.RoundTimelineView
               android:id="@+id/timeline1"
               android:layout_width="?android:listPreferredItemHeight"
               android:layout_height="?android:listPreferredItemHeight"
               app:timeline_indicatorSize="10dp"
               app:timeline_lineStyle="linear"
               android:textDirection="rtl"

               app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingTop="10dp"
               android:layout_gravity="center_vertical"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Matriculation,2010"

                   android:layout_gravity="center_vertical"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Holy Cross School,Silchar"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   android:layout_gravity="center_vertical"
                   />


           </LinearLayout>

       </LinearLayout>


            <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.alorma.timeline.RoundTimelineView
                android:id="@+id/timeline2"
                android:layout_width="?android:listPreferredItemHeight"
                android:layout_height="?android:listPreferredItemHeight"
                app:timeline_indicatorSize="10dp"
                app:timeline_lineStyle="linear"
                android:textDirection="rtl"
                android:text="Him"
                app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Higher Secondary,2010"

                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ramanuj Gupta Junior College, Silchar"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>

        </LinearLayout>


            <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.alorma.timeline.RoundTimelineView
                android:id="@+id/timeline3"
                android:layout_width="?android:listPreferredItemHeight"
                android:layout_height="?android:listPreferredItemHeight"
                app:timeline_indicatorSize="10dp"
                app:timeline_lineStyle="linear"
                android:textDirection="rtl"
                android:text="Him"
                app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Graduation,2015"

                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J.D. Birla Institute, Kolkata"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>

        </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.alorma.timeline.RoundTimelineView
                    android:id="@+id/timeline4"
                    android:layout_width="?android:listPreferredItemHeight"
                    android:layout_height="?android:listPreferredItemHeight"
                    app:timeline_indicatorSize="10dp"
                    app:timeline_lineStyle="linear"
                    android:textDirection="rtl"
                    android:text="Him"
                    app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post-Graduation,2017"

                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maharaja Sayajirao University, Vadodra"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>

            </LinearLayout>
         </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:onClick="onHome"
            android:layout_weight="0.2"
            android:src="@drawable/home"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/school"
            android:onClick="onSchool"
            android:layout_height="30dp"
            android:src="@drawable/school"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:layout_height="30dp"
            android:onClick="onHobby"
            android:id="@+id/hobby"
            android:src="@drawable/xbox"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/contact"
            android:onClick="onContact"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            />


    </LinearLayout>

</LinearLayout>
