<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_display"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_weight="1"
   tools:context="com.portfolio.vidisha.Graduation.Graduation">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:padding="20dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mee"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
                android:textSize="24dp"

                android:layout_marginLeft="20dp"
                android:text="Vidisha Bardia"
                />
                <TextView
                android:text="Food Sc. and Nutrition Specialist"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Student"
                    android:layout_marginLeft="20dp"
android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#c2c2c2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:paddingTop="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/call"
                android:onClick="onCall"
                android:layout_weight="0.2"
                android:src="@drawable/ph"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#000"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_weight="0.2"
                android:id="@+id/snapcaht"
                android:onClick="onSnapchat"
                android:layout_height="30dp"
                android:src="@drawable/snapchat"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#000"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_weight="0.2"
                android:layout_height="30dp"
                android:onClick="onFacebook"
                android:id="@+id/Facebook"
                android:src="@drawable/fb"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#000"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_weight="0.2"
                android:id="@+id/insta"
                android:onClick="onInsta"
                android:layout_height="30dp"
                android:src="@drawable/instagram"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <com.alorma.timeline.RoundTimelineView
                    android:id="@+id/timeline1"
                    android:layout_width="?android:listPreferredItemHeight"
                    android:layout_height="?android:listPreferredItemHeight"
                    app:timeline_indicatorSize="10dp"
                    app:timeline_lineStyle="linear"
                    android:textDirection="rtl"

                    app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certification"

                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="iLEAD certification in personality development and communication(2012)"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <com.alorma.timeline.RoundTimelineView
                    android:id="@+id/timeline21"
                    android:layout_width="?android:listPreferredItemHeight"
                    android:layout_height="?android:listPreferredItemHeight"
                    app:timeline_indicatorSize="10dp"
                    app:timeline_lineStyle="linear"
                    android:textDirection="rtl"

                    app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certification"

                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coursera certification in Nutrition for Health Promotion Disease Prevention"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <com.alorma.timeline.RoundTimelineView
                    android:id="@+id/timeline221"
                    android:layout_width="?android:listPreferredItemHeight"
                    android:layout_height="?android:listPreferredItemHeight"
                    app:timeline_indicatorSize="10dp"
                    app:timeline_lineStyle="linear"
                    android:textDirection="rtl"

                    app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internship"

                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apollo Hospitals, Bangalore in Nutrition and Dietetics department"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <com.alorma.timeline.RoundTimelineView
                    android:id="@+id/timeline2w1"
                    android:layout_width="?android:listPreferredItemHeight"
                    android:layout_height="?android:listPreferredItemHeight"
                    app:timeline_indicatorSize="10dp"
                    app:timeline_lineStyle="linear"
                    android:textDirection="rtl"

                    app:timeline_type="middle"></com.alorma.timeline.RoundTimelineView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internship"

                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post Graduate Institute in Medical Research and Education,Chandigarh"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#c2c2c2"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/home"
            android:onClick="onHome"
            android:layout_weight="0.2"
            android:src="@drawable/home"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/school"
            android:onClick="onSchool"
            android:layout_height="30dp"
            android:src="@drawable/school"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:layout_height="30dp"
            android:onClick="onHobby"
            android:id="@+id/hobby"
            android:src="@drawable/xbox"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_weight="0.2"
            android:id="@+id/contact"
            android:onClick="onContact"
            android:layout_height="30dp"
            android:src="@drawable/phone"
            />


    </LinearLayout>
</LinearLayout>